<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dip"
    android:minHeight="75dip"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/brief_news_image"
            android:scaleType="fitStart"
            android:layout_width="90dip"
            android:layout_height="60dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="2dip"
            android:contentDescription="@string/brief_news_image_description"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/brief_news_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dip"
                android:textSize="8sp"/>

            <TextView
                android:id="@+id/brief_news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/brief_news_description_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/brief_news_image_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"/>

        <TextView
            android:id="@+id/brief_news_image_credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"/>

        <TextView
            android:id="@+id/brief_news_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:textSize="10sp"/>
    </LinearLayout>

</LinearLayout>