<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dip"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:weightSum="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/brief_news_image"
            android:layout_width="90dip"
            android:layout_height="60dip"
            android:scaleType="fitXY"
            android:layout_marginRight="5dip"
            android:layout_marginTop="2dip"
            android:layout_marginLeft="2dip"
            android:layout_marginBottom="2dip"
            android:focusable="false"
            android:clickable="true"
            android:contentDescription="@string/brief_news_image_desc"/>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/brief_news_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dip"
                android:textSize="8sp"/>

            <TextView
                android:id="@+id/brief_news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <View
            android:id="@+id/brief_news_read_indicator"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:background="@color/brief_list_item_notread"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/brief_news_description_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dip"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/brief_news_image_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"/>

        <TextView
            android:id="@+id/brief_news_image_credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:textSize="8sp"/>

        <TextView
            android:id="@+id/brief_news_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:textSize="10sp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/brief_news_rubric_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rubric_label"
                android:textSize="8sp"/>

            <TextView
                android:id="@+id/brief_news_rubric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>